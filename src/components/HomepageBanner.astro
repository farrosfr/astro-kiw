---
import { Image } from 'astro:assets';

// Import the images from the assets folder
import image1 from '../assets/banner/1.png';
import image2 from '../assets/banner/2.png';
import image3 from '../assets/banner/3.png';
import image4 from '../assets/banner/4.png';
import image5 from '../assets/banner/5.png';

const link = "/katalog";
---
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-col gap-4">
        <!-- Row 1: Full-width image -->
        <div class="w-full rounded-lg overflow-hidden">
            <a href={link}>
                <Image 
                    src={image1} 
                    alt="Promotional Banner 1" 
                    class="w-full h-auto object-cover" 
                />
            </a>
        </div>

        <!-- Row 2: Complex Grid -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 h-auto md:h-[300px]">
            <!-- Column 1 (50%) -->
            <div class="md:col-span-2 w-full h-full rounded-lg overflow-hidden">
                <a href={link} class="w-full h-full">
                    <Image 
                        src={image2} 
                        alt="Promotional Banner 2" 
                        class="w-full h-full object-cover"
                    />
                </a>
            </div>

            <!-- Column 2 (25%) -->
            <div class="w-full h-full rounded-lg overflow-hidden">
                <a href={link} class="w-full h-full">
                    <Image 
                        src={image3} 
                        alt="Promotional Banner 3" 
                        class="w-full h-full object-cover"
                    />
                </a>
            </div>

            <!-- Column 3 (25% with 2 rows) -->
            <div class="grid grid-rows-2 gap-4 w-full h-full">
                <div class="w-full h-full rounded-lg overflow-hidden">
                    <a href={link} class="w-full h-full">
                        <Image 
                            src={image4} 
                            alt="Promotional Banner 4" 
                            class="w-full h-full object-cover"
                        />
                    </a>
                </div>
                <div class="w-full h-full rounded-lg overflow-hidden">
                    <a href={link} class="w-full h-full">
                        <Image 
                            src={image5} 
                            alt="Promotional Banner 5" 
                            class="w-full h-full object-cover"
                        />
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
