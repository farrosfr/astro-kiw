---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import { pool } from '../../lib/db';
import type { Product } from '../../data/products';

const { brand } = Astro.params;

let products: Product[] = [];
let error: string | null = null;
let pageTitle = `Merk: ${brand}`;

try {
  const [rows] = await pool.query(
    'SELECT id, name, price, imageUrl, description, slug, kategori, brand FROM products WHERE brand = ? ORDER BY created_at DESC',
    [brand]
  );
  products = (rows as any[]).map(row => ({
    ...row,
    id: String(row.id),
  }));
} catch (e: any) {
  console.error(e);
  error = "Tidak dapat memuat produk untuk merk ini. Silakan coba lagi nanti.";
}
---

<Layout title={pageTitle}>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-center mb-2">Merk</h1>
    <h2 class="text-2xl text-gray-600 font-semibold text-center mb-12">{brand}</h2>
    
    {error && (
      <div class="text-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline"> {error}</span>
      </div>
    )}

    {!error && products.length === 0 && (
      <p class="text-center text-gray-500">Tidak ada produk yang ditemukan untuk merk ini.</p>
    )}

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {
        products.map(product => (
          <ProductCard product={product} />
        ))
      }
    </div>
  </main>
</Layout>