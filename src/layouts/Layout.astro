---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Rfq from '../components/Rfq.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Platform B2B dan B2G untuk material listrik, solusi industri cerdas, dan teknologi energi terbarukan." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | SonusHUB</title>
		<script is:inline>
			// Script ini berjalan lebih awal untuk menghindari "flash" tema yang salah
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					return 'dark';
				}
				return 'light';
			})();

			if (theme === 'dark') {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const openBtnHeader = document.getElementById('open-rfq-modal-header');
                const closeBtn = document.getElementById('close-rfq-modal');
                const modal = document.getElementById('rfq-modal');

                function openModal() {
                    if (modal) modal.classList.remove('hidden');
                }

                function closeModal() {
                    if (modal) modal.classList.add('hidden');
                }

                if (openBtnHeader && closeBtn && modal) {
                    openBtnHeader.addEventListener('click', openModal);
                    closeBtn.addEventListener('click', closeModal);

                    modal.addEventListener('click', (event) => {
                        if (event.target === modal) {
                            closeModal();
                        }
                    });
                }
            });
        </script>
	</head>
	<body class="bg-gray-50 text-gray-800 dark:bg-gray-900 dark:text-gray-200 flex flex-col min-h-screen">

		<Header />

		<main class="flex-grow">
			<slot />
		</main>

		<Footer />

        <Rfq />

	</body>
</html>